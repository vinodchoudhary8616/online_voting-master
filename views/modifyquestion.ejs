<html>
  <head>
    <title>Edit Question | Online Voting Platform</title>
    <meta name="csrf-token" content="<%= csrf %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body style="background-color: lightskyblue;">
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-2/5 w-full">
        <div class="pt-6">
          <b>
            <p class="text-black-600" align="center">edit question</p>
          </b>
            <form
              method="post"
              action="/elections/<%=election.id%>/questions/<%=question.id%>/modify">
              <input type="hidden" name="_csrf" value="<%= csrf %>">
              <div class="flex flex-col w-full">
                <input
                  type="text"
                  name="questionname"
                  value="<%= question.questionname %>"
                  placeholder="questionname"
                  class="border-2 border-black p-2 rounded-lg"
                />
              </div>
              <div class="flex flex-col w-full">
                <input
                  type="text"
                  name="description"
                  value="<%= question.description %>"
                  placeholder="description"
                  class="border-2 border-black p-2 rounded-lg"
                />
              </div>
              <div class="flex justify-center items-center w-full gap-4">
                <button
                  type="submit"
                  class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-3 py-1"
                >
                  Update
                </button>
                <a href="/questions/<%= election.id%>" type="reset"
                  class="text-white bg-red-600 hover:bg-red-800 font-medium rounded px-3 py-1">
                  
                  Cancel
                </a>
              </div>
            </form>
        </div>
        <% if(messages && messages.error && messages.error.length > 0)  { %>
          <% for(var i=0; i<messages.error.length; i++) { %>
                 <div class="bg-red-300 text-red-900 p-2 rounded-lg shadow">
                  <center>
                  <li> <%= messages.error[i] %></li>
                </center>
                 </div>
          <% } %>
        <% } %>      
    </div>
  </div>
</div>
</body>
</html>